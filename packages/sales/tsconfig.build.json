{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "noEmit": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "stripInternal": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/__tests__/**",
    "src/**/test-utils/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
